<div class="container">
    <div class="well">
        <%= link_to manager_root_path, class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-chevron-left"></i> Manage projects
        <% end %>
    </div>
    <h1>
        Customer cases
    </h1>    
    <table class="table table-striped table-hover col-lg-12">
        <thead>
            <tr>
              <th>From</th>              
              <th>Email</th>
              <th>Message</th>
              <th>Time</th>
              <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% @cases.each do |customer| %>
            <tr>
                <td>
                    <%= customer.name %>
                </td>
                <td>
                    <%= customer.email_address %>
                </td>
                <td>
                    <%= customer.message.truncate(20) %>   
                </td>
                <td>
                    <%= time_ago_in_words(customer.created_at) %> ago
                </td>
                <td class="btn-group">
                    <%= link_to manager_cases_path, class: 'btn btn-danger btn-sm' do %>
                    <i class="fa fa-remove"></i>
                    <% end %>
                    <%= link_to manager_cases_path, class: 'btn btn-default btn-sm' do %>
                    <i class="fa fa-chevron-right"></i> Read
                    <% end %>                    
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>    
</div>