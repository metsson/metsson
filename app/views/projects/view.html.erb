<%= content_for :meta_tags do %>
<title><%= @project.title %></title>
<% end %>

<div class="container">
    <%= link_to projects_path do %>
        <span class="button"> 
        <i class="fa fa-angle-double-left"></i> Se fler projekt
        </span>
    <% end %>    
    <h1>
        <%= @project.title %>
    </h1>
    <article>
        <section>
            <p class="lead">
                <%= @project.short_description %>
            </p>
        </section>
        <!-- Project pics -->
        <% if @project.project_pictures.size > 0 %>
        <div id="links" class="project-picture-gallery">
            <ul class="list-inline text-center">                       
                <% @project.project_pictures.take(6).each do |picture| %>
                <li class="animated shake">
                <%= link_to picture.avatar.url(:original), "data-gallery" => "" do %>
                    <%= image_tag picture.avatar.url(:thumb), class: "img-responsive" %>
                <% end %>
                </li>
                <% end %>
            </ul>
            </div>            
        <% end %>
        <!-- Project pics -->        
        <section>
            <%= raw @project.long_description %>
        </section>                
        <aside>
            <div class="well">          
            <h2>Låter detta projekt kul?</h2>
            <p> 
                Om du har något liknande på gång eller vill veta mer om projektet, tveka inte att <%= link_to 'höra av dig', contact_path %>!
            </p>
            <p>
            <%= link_to projects_path do %>
                <span class="btn btn-default btn-xs"> 
                <i class="fa fa-angle-double-left"></i> Se fler projekt
                </span>
            <% end %> <em>eller</em>
            <%= link_to contact_path do %>
                <span class="button btn-xs"> 
                <i class="fa fa-envelope"></i> Kontakta mig!
                </span>
            <% end %>
            </p>
            </div>        
        </aside>           
    </article> 
</div>

<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title">Visar bilder för '<%= @project.title %>'</h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>