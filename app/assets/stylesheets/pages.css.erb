/* The first impression */
.landing-splash {
    margin-top: -2em;
    padding: 7em 0;
    overflow: hidden;
    background: #fff;
    color: #fff;
    text-shadow: 0 0 4px rgba(0, 0, 0, .4);
    background-size: cover;    
    box-shadow: 0px 2px 2px rgba(0, 0, 0, .3);    
}

    .home {
        background-image: url("<%= asset_path('bg4.png') %>");
    }

    .contact {
        background-image: url("<%= asset_path('bg3.png') %>");
    }

    .portfolio {
        background-image: url("<%= asset_path('bg.png') %>");
    }    

    .merkur {
        background-image: url("//placehold.it/1200");
        min-height: 25em;
        background-position: center center;
    }

/* Enhance quick infos about services */
.quick-about-services {
    margin: 6em auto;
    text-align: center;
    color: #3e3e3e;
}

.quick-about-services-icon img {
    vertical-align: middle;
    margin: 0 auto;
    text-align: center;
}


/* Contact form */
.contact-form-button {
    margin: 1em auto;
    float: right;
}


/* Shared between pages  */
.take-action-box p {
    font-size: .8em;
    padding: .2em;
    color: rgba(0,0,0, .5);
}
.take-action-box img {
    text-align: center;
    margin: 0 auto;
    vertical-align: middle;
    max-width: 64px;
}
@media screen and (max-width: 480px) {
    
    .landing-splash {
        font-size: 2rem;
        text-align: center;
    }

        .landing-splash-buttons em {
            display: block;
            margin: .3em auto;
        }

}