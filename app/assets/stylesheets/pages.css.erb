/* The first impression */
.big-size {
    padding-top: 3.6em;
    font-size: 150%;
}

.big-size-action-buttons {
    margin: 1.3em auto;
}

/* Put the splash image to center */
.big-size-merkur-with-polo {
    margin-top: 2.6em;
    vertical-align: middle;
    max-width: 600px;
}

/* Enhance quick infos about services */
.quick-about-services {
    margin: 6em auto;
    text-align: center;
    color: #3e3e3e;
}

.quick-about-services-icon i {
    color: rgba(35, 161, 39, .6);
}

@media screen and (max-width: 480px) {
    
    .big-size {
        padding-top: 0;
    }

    .big-size-action-buttons {
        text-align: center;
    }

}